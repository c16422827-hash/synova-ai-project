default_platform(:ios)

platform :ios do
  desc "Build iOS app"
  lane :build do
    gym(scheme: "SynovaAI", export_method: "app-store")
  end

  desc "Release to App Store (template)"
  lane :release do
    build
    deliver(submit_for_review: false, automatic_release: false)
  end
end

platform :android do
  desc "Build Android app bundle"
  lane :build do
    gradle(task: "bundle", build_type: "Release")
  end

  desc "Upload to Play (template)"
  lane :release do
    build
    supply(track: "internal")
  end
end
